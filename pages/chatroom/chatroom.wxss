.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.chat-list {
  flex-grow: 1;
  overflow-y: auto;
}

.input-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  box-shadow: 0 -2rpx 4rpx rgba(0, 0, 0, 0.15);
}

.input-wrapper {
  display: flex;
  align-items: center;
  height: 100%;
  width: 95%;
  padding: 0 30rpx;
  border-radius: 20rpx;
  background-color: #f5f5f5;
}

.icon-btn {
  width: 60rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.input {
  flex-grow: 1;
  height: 100%;
  margin-left: 20rpx;
  font-size: 30rpx;
  border: none;
  outline: none;
  background-color: #f5f5f5;
}

.send-btn {
  width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border: none;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #fff;
  margin-left: 20rpx;
  background-color: #4b86f0;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.15);
}
